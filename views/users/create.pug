extend ../layout/common
block content
    h1 Create New Users
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/users/create", method="post",enctype="multipart/form-data")
        .form-group 
            label(for="name") Name
            input#name.form-control.col-sm-3(name="name" type="text",value= values ? values.name : '')
            label(for="phone") Phone
            input#phone.form-control.col-sm-3(name="phone",type="text",value= values ? values.phone : '')
        .form-group
            label(for="avatar") Avatar
            input#avatar.form-control-file(name="avatar",type="file")
        button.btn.btn-primary Create